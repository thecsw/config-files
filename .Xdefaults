! urxvt
URxvt*geometry:                80x40

URxvt*font: xft:Inconsolata:pixelsize=20:antialias=true:hinting=true
!URxvt.font: xft:Inconsolata Nerd Font Complete Mono:size=10
!URxvt.letterSpace: -1
!URxvt*font: xft:Inconsolata:size=15

!URxvt.cursorBlink: 1
URxvt.cursorUnderline: 1

URxvt.secondaryScroll: 0
urxvt*blurRadius: 	    1
URxvt*depth:                24
!URxvt*borderless: 	    1
URxvt*scrollBar:            false
URxvt*saveLines:  	    2000
URxvt.transparent:	    true
URxvt*.shading:             30
URxvt*skipBuiltinGlyphs:    true
! Meta modifier for keybindings
!URxvt.modifier: super

URxvt.perl-ext-common:  resize-font,ibeamcursor

!! perl extensions
URxvt.perl-ext:             default,url-select,clipboard

! disable the stupid ctrl+shift 'feature'
URxvt.iso14755: false
URxvt.iso14755_52: false

!urxvt color scheme:

!URxvt*background: #2B2B2B
!URxvt*foreground: #DEDEDE

!URxvt*colorUL: #86a2b0

! black
!URxvt*color0  : #2E3436
!URxvt*color8  : #555753

! red
!URxvt*color1  : #CC0000
!URxvt*color9  : #EF2929

! green
URxvt*color2  : #4E9A06
URxvt*color10 : #8AE234

! yellow
URxvt*color3  : #C4A000
URxvt*color11 : #FCE94F

